    #rm -rf $HOME/.android/!(avd)

    for d in "${homedir_dirs[@]}"; do
        rm -rf "$HOME/${d}"
    done
    for f in "${homedir_files[@]}"; do
        rm -f "$HOME/${f}"
    done
    for d in "${config_dirs[@]}"; do
        rm -rf "$HOME/.config/${d}"
    done
    for f in "${config_files[@]}"; do
        rm -f "$HOME/.config/${f}"
    done
    for d in "${localshare_dirs[@]}"; do
        rm -rf "$HOME/.local/share/${d}"
    done
    for d in "${tmpfiles[@]}"; do
        rm -rf /tmp/${tmpfiles} 2>/dev/null
    done
