function root_func ()
{
    if [ $EUID == 0 ]; then
        echo LoL
#        rm -r "/usr/share/locale/{[a-dg-z]*,e!(n),fr[a-z_@]*}"
#        rm -r /usr/share/man/[a-no-z]*
    fi
}

if [ "${BASH_SOURCE[0]}" == "$0" ]; then
    main "$@"
fi
