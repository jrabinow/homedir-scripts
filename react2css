#!/opt/local/libexec/gnubin/sed -f

s/^};$/}/
s/const \(.*\) = {/\1 {/
s/\([a-zA-Z0-9i"]\),\?$/\1;/
s/"//g
s/\([a-z]*\)\([A-Z]\)\([a-z]*\):/\1-\L\2\3:/
s/\(\s*width\s*: [0-9\.][0-9\.]*\);/\1pt;/
s/\(\s*height\s*: [0-9\.][0-9\.]*\);/\1pt;/
s/\(\s*font-family\s*: .*\);/\1,inherit;/
s/\(\s*letter-spacing\s*: [0-9\.][0-9\.]*\);/\1pt;/
s/\(\s*font-size\s*: [0-9][0-9]*\);/\1pt;/
